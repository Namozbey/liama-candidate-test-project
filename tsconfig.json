{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowUnusedLabels": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules"]
}
